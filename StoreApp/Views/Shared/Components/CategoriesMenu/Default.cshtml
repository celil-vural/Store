@model List<Category>
<style>
    .list-group-item:not(.active):hover {
        background-color: #f8f9fa; /* Hover arkaplan rengi */
        cursor: pointer; /* İmleç tipi */
    }
</style>
<div class="mt-3">
    <h6 class="lead">
        <i class="fa fa-solid fa-bars text-secondary"></i>
        Categories
    </h6>
</div>
<div class="my-4">
    <ul class="list-group my-2">
        @foreach (var category in Model)
        {
            var categoryId = category.CategoryId.ToString();
            var selectedCategoryId = Context.Request.Query["categoryId"].ToString();
            <li class="list-group-item list-group-item-action @(selectedCategoryId == categoryId ? "active" : "")">
                <a class="text-decoration-none text-reset pointer-events-none" asp-action="Index" asp-route-categoryId="@category.CategoryId">
                    @category.CategoryName @category.CategoryId
                </a>
            </li>
        }
    </ul>
</div>