@model Product
<div class="col-sm-12 col-md-4 my-2">
    <div class="card" style="width: 18rem;">
        <div class="cart-header text-center">
            @Model.ProductName
        </div>
        <img src="/images/default.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <div class="cart-text">
                <div class="text-danger text-center lead p-2 rounded">
                    @Model.UnitPrice.ToString("C")
                </div>
            </div>
            <p class="card-text">@Model.QuantityPerUnit</p>
            <div class="d-flex justify-content--center">
                <div class="btn-group" role="group">
                    <a class="btn btn-outline-primary rounded-2" asp-action="Get"asp-controller="Product" asp-route-id="@Model.ProductId"><i class="fa-solid fa-arrow-right"></i></a>
                    <form id="@Model.ProductId" asp-page="/cart" method="post">
                        <input type="hidden" asp-for="ProductId"/>
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                        <button type="submit" class="btn btn-outline-success mx-1">
                            <i class="fa fa-cart-plus"></i>
                            Add
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
