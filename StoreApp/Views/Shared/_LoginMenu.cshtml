@if(User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-route-returnUrl="@Context.Request.PathAndQuery()" asp-controller="Account" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-area=""asp-route-returnUrl="@Context.Request.PathAndQuery()" asp-controller="Account" asp-action="Login">Login</a>
    </li>
