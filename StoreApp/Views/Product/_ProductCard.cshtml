@model Product
<div class="col-sm-12 col-md-4 my-2">
  <div class="card" style="width: 18rem;">
    <img src="/images/default.jpg" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">@Model.ProductName</h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <div class="btn-group" role="group">
            <a class="btn btn-outline-primary" asp-action="Get" asp-route-id="@Model.ProductId">
                <i class="fa-solid fa-arrow-right"></i>
                Details
            </a>
            <form id="@Model.ProductId" asp-page="/cart" method="post">
                <input type="hidden" asp-for="ProductId"/>
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                <button type="submit" class="btn btn-outline-success">
                    <i class="fa fa-cart-plus"></i>
                    Add
                </button>
            </form>
        </div>
    </div>
  </div>
</div>
