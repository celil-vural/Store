@model Entities.Dtos.User.RegisterDto
<div class="text-center">
    <h6 class="dispaly-6">
        <i class="fa-solid fa-user-plus bg-secondary p-3 rounded-5 text-white"></i>
        <br/>
        Login
    </h6>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="">
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-controller="Account" asp-action="Register">
            <div class="form-group my-3">
                <label class="form-label" asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control"/>
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control"/>
            </div>
            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-user-plus"></i>
                    Login
                </button>
            </div>
        </form>
        <div>
            If you have a account, please click here to <a asp-controller="Account" asp-action="Login">login</a>.'
        </div>
    </div>
    <div class="col-md-3"></div>
</div>