@model ProductDtoForUpdate
<div class="text-center">
    <div class="display-6">
        Update Product
    </div>
</div>
<form method="post" asp-action="Update">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId"/>
    <div class="form-group mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-check form-switch">
        <input asp-for="ShowCase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault"/>
        <label asp-for="ShowCase" class="form-check-label" for="flexSwitchCheckDefault">ShowCase</label>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CategoryId" class="form-label">Category Name</label>
        <select asp-items="@ViewBag.Categories" asp-for="CategoryId" class="form-select"></select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Summary" class="form-label"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-outline-success">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-danger">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>