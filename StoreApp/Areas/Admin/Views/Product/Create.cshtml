@model Product
<div class="text-center">
    <div class="display-6">
        Create Product
    </div>
    @ViewBag.Categories.
</div>
<form method="post" asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="UnitPrice" class="form-label"></label>
        <input asp-for="UnitPrice" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="CategoryId" class="form-label">Category Name</label>
        <select asp-for="CategoryId" class="form-select">
            @foreach(Category item in ViewBag.Categories)
            {
                <option value="@item.CategoryId">@item.CategoryName</option>
            })
        </select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="QuantityPerUnit" class="form-label"></label>
        <input asp-for="QuantityPerUnit" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="UnitsInStock" class="form-label"></label>
        <input asp-for="UnitsInStock" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="UnitsOnOrder" class="form-label"></label>
        <input asp-for="UnitsOnOrder" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="SupplierId" class="form-label"></label>
        <input asp-for="SupplierId" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="ReorderLevel" class="form-label"></label>
        <input asp-for="ReorderLevel" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-outline-success">
                <i class="fa fa-save"></i>
                Create
            </button>
            <a asp-action="Index" class="btn btn-outline-danger">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>