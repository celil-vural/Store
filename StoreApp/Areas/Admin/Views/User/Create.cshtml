@model UserDtoForCreation
<div class="text-center my-5">
    <div class="dispaly-6">Create User</div>
</div>
<div class="text-center text-danger" asp-validation-summary="All"></div>
<form method="post" asp-action="Create">
    <div class="row my-5">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label class="form-label" asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="number" class="form-control" />
            </div>
            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <input type="submit" class="btn btn-secondary"/>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Back
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="lead p-2 my-2">
                Roles
                @foreach (var item in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input class="form-check-input" type="checkbox" value="@item" name="Roles" />
                        <label class="form-check-label">@item</label>
                    </div>
                }
                <span id="rolesError" class="text-danger" style="display:none">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    You must choose at least one role!
                </span>
            </div>
        </div>
    </div>
</form>