@model UserDtoForUpdate
<div class="text-center my-5">
    <div class="dispaly-6">Update (@Model.UserName)</div>
</div>
<form method="post" asp-action="Update">
    <div asp-validation-summary="All" class="text-center text-danger"></div>
    <div class="row my-5">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label class="form-label" asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control"/>
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
            </div>

            <div class="form-group my-3">
                <label class="form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="number" class="form-control" />
            </div>
            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <input type="submit" class="btn btn-secondary"/>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Back
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="lead p-2 my-2">
                Roles
                @foreach (var item in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input class="form-check-input" type="checkbox" checked="@(Model.UserRoles.Contains(@item))" value="@item" name="Roles"/>
                        <label class="form-check-label">@item</label>
                    </div>
                }
            </div>
            <div class="text-muted">
                Please choose the roles for the user.
            </div>
        </div>
    </div>
</form>